rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write their own data
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read workshop data
    match /workshops/{workshopId} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to read and write their own registrations
    match /registrations/{registrationId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Allow system health checks for connection testing
    match /system_health_checks/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Allow connection tests
    match /_connection_test/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
} 